@model IEnumerable<CRMFacilitoInicial.Models.Campania>

@{
    ViewBag.Title = "Index";
}

<p>
    <a class="btn btn-default" data-target="#modal-crear" data-toggle="modal"
       href="/Campanias/Create">Crear nueva</a>
</p>
<hr/>

<div class="modal fade" id="modal-crear" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="modal-content">
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPlan)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @item.FechaPlan.ToShortDateString()
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.CampaniaId })" class="btn btn-default"
               data-toggle="tooltip" title="Editar campaña">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", new { id=item.CampaniaId })" class="btn btn-default"
               data-toggle="tooltip" title="Eliminar campaña">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>

@section Scripts {
<script>
    $('[data-toggle="tooltip"]').tooltip();
    function closeModalCreate(data) {
        if (data.success) {
            $('#modal-crear').modal('hide');
            window.location.href = "/campanias/index";
        }
    }
</script>
    }
