@model IEnumerable<CRMFacilitoInicial.Models.TipoCliente>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreTipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreTipo)
        </td>
        <td>
            <a href="@Url.Action("Edit", new {id = item.TipoClienteId})" class="btn btn-default"
               data-toggle="tooltip" title="Editar tipo de cliente">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a href="@Url.Action("Delete", new {id = item.TipoClienteId})" class="btn btn-default"
               data-toggle="tooltip" title="Eliminar tipo de cliente">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
<script>
    $('[data-toggle="tooltip"]').tooltip();
</script>